head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Login Page
  link(rel='stylesheet' href='/css/style_login.css')
  link(rel='preconnect' href='https://fonts.gstatic.com')
  link(href='https://fonts.googleapis.com/css2?family=Zen+Dots&display=swap' rel='stylesheet')
.container2
  a(href='/login')
    input.btn(type='button' value='Login')
.container
  .login
    .login2
      p(style='font-size: 50px;margin: 20px;') Register
      div(style='display: flex; flex-direction: column; height: 100%;')
        form(action='/register' method='POST')
          input.name(type='text' name='username' placeholder='Username' required)
          input.password(type='password' id='password' name='password' placeholder='Password' required)
          p#password-hint(style='color: gray; margin: 0.5rem 0;')
          input.btn(type='submit' value='Submit')

script.
  const passwordInput = document.getElementById('password');
  const passwordHint = document.getElementById('password-hint');

  passwordInput.addEventListener('input', () => {
    const password = passwordInput.value;
    const isValid = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$/.test(password);;

    if (isValid) {
      passwordHint.style.color = 'green';
      passwordHint.textContent = 'Password is strong!';
    } else {
      passwordHint.style.color = 'red';
      passwordHint.textContent = 'Password must contain at least one uppercase letter, one lowercase letter, one digit, one special character, and be at least 8 characters long.';
    }
  });
